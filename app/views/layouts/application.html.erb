<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">
            Bookers
          </a>
        </div>

        <div class="collapse navbar-collapse" id="navbarEexample7">
          <ul class="nav navbar-nav navbar-right">
           <% if user_signed_in? %>
            <li><%= link_to 'Home', user_path(current_user.id), class: "glyphicon glyphicon-home" %></li>
            <li><%= link_to 'Users', users_path, class: "glyphicon glyphicon-link" %></li>
            <li><%= link_to 'Books', books_path, class: "glyphicon glyphicon-edit"  %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Home', root_path, class: "glyphicon glyphicon-home" %></li>
            <li><%= link_to 'About', about_path, class: "glyphicon glyphicon-link" %></li>
            <li><%= link_to 'Sign up', new_user_registration_path, class: "glyphicon glyphicon-log-in" %></li>
            <li><%= link_to 'login', new_user_session_path, class: "glyphicon glyphicon-edit"  %></li>

          <% end %>
          </ul>
        </div>
      </div>
    </nav>
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <%= yield %>
  </body>
  </div>
</html>
