<div class=container>
	<div class="row">
		<div class="col-xs-offset-3 col-xs-6">
			<h1>Editing Book</h1>
			<% if @book.errors.any? %>
			  <div class="alert alert-warning">
			    <ul>
			      <% @book.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			  </div>
			<% end %>
			<%= form_for(@book) do |f| %>
			<p>Title</p>
			<%= f.text_field :title, class: "active col-xs-12" %>
			<P>Opinion</P>
			<%= f.text_area :body, class: "active col-xs-12" %>
			<%= f.submit 'Update Book', class: "btn btn-primary active col-xs-12" %>
			<% end %>
			<%= link_to 'show', book_path(@book.id) %>
			<%= link_to 'Back', books_path(@book.id) %>
		</div>
    </div>
</div>