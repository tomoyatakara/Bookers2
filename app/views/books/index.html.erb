<div class=container>
	<div class="row">
		<% if @book.errors.any? %>
			  <div class="alert alert-warning">
			    <ul>
			      <% @book.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			  </div>
			<% end %>
		<div class="col-xs-3">
	 		<%= render'books/list', book: @bookn, user: current_user %>
		</div>
		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></td>
						<td><%= link_to book.title ,book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>