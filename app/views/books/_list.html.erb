    <h1>User info</h1>
    <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
    <table class="table">
      <thead>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </thead>
    </table>

    <%= link_to ' ', edit_user_path(user.id),class: "btn btn-default glyphicon glyphicon-wrench col-xs-12" %>

        <h2>New book</h2>
        <%= form_for(book) do |f| %>

            <h4>Title</h4>
            <%= f.text_field :title, class:"col-xs-12" %>

            <h4>Opinion</h4>
            <%= f.text_area :body, class:"col-xs-12" %><br/>

            <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
        <% end %>

