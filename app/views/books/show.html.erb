<div class=container>
	<div class="row">
		<div class="col-xs-3">
	 		<%= render'books/list', book: @newbook, user: @book.user %>
		</div>
		<div class="col-xs-9">
			<h1>Book detail</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@book.user.id) do %>
								<%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %><br>
								<%= @book.user.name %>
							<% end %>
						</td>
						<td><%= link_to @book.title, book_path(@book.id) %></td>
						<td><%= @book.body %></td>
						<% if @book.user == current_user %>
						<td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
						<td><%= link_to "Destroy", book_path(@book.id) ,method: :delete, class:"btn btn-danger" %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>

